#!/usr/bin/env sh

echo "🔍 Running pre-push checks..."

echo "📝 Running mypy type checking..."
cd backend && source venv/bin/activate && mypy . || {
  echo "❌ Type checking failed!"
  exit 1
}

echo "🧪 Running pytest..."
cd backend && source venv/bin/activate && pytest || {
  echo "❌ Tests failed!"
  exit 1
}

echo "✅ Pre-push checks completed!"
